			public void actionPerformed(ActionEvent e) {
				
				String idusuario = String.valueOf(txt_id.getText());
				String Item_docu;
				Item_docu = comboBox_tipodocumento.getSelectedItem().toString();
				String usre = String.valueOf(txt_user.getText());
